{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "comine",
  "version": "0.1.0",
  "identifier": "com.nichind.comine",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Comine",
        "width": 900,
        "height": 650,
        "transparent": true,
        "decorations": false,
        "resizable": true,
        "center": true,
        "windowEffects": {
          "effects": ["acrylic"],
          "color": "#131313a3"
        }
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
