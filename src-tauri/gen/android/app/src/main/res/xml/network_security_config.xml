<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext (HTTP) traffic for local development -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Allow all HTTPS traffic (needed for thumbnails from i.ytimg.com, etc.) -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">i.ytimg.com</domain>
        <domain includeSubdomains="true">i9.ytimg.com</domain>
        <domain includeSubdomains="true">yt3.ggpht.com</domain>
        <domain includeSubdomains="true">lh3.googleusercontent.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>
