{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "comine",
  "version": "1.0.4",
  "identifier": "com.nichind.comine",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/nichind/comine/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlEOTc0RkQ5RDk5NUE2Q0IKUldUTHBwWFoyVStYbmRUL3l5M0U1S3lvOUFLQ2xMR3J6d0hyWXpoWHV6S0FpYzVaekN6MDFtNWIK"
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Comine",
        "width": 900,
        "height": 650,
        "transparent": true,
        "decorations": false,
        "resizable": true,
        "center": true,
        "windowEffects": {
          "effects": [
            "acrylic"
          ],
          "color": "#131313a3"
        }
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": "v1Compatible",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
